<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#165519"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_marginTop="0dp"
        android:id="@+id/flog_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_flog" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/flog_view" />

    <TextView
        android:id="@+id/FLOGing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flog_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:text="FLOGing"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="538dp"
        android:background="@drawable/button_circle2"
        android:src="@drawable/foot_print"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

        android:text="촬영"
        android:textSize="25dp" />


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/flog_view"
        android:layout_marginTop="40dp">
        <com.example.camera.CameraSurfaceView
            android:id="@+id/surface_view"
            android:layout_height="500dp"
            android:layout_width="match_parent"
            />


    </FrameLayout>



</RelativeLayout>



